algoritmo "média"
var
   N1, N2, M, S : real
inicio
     escreva("Informe um numero")
     Leia(N1)
     escreva("Informe um numero")
     Leia(N2)
     escreva("Informe um numero")
     Leia(M)
     S <- (N1 + N2) / M
     escreva("A Média entre ",N1 , " e ", N2 , " sera " , S)
fimalgoritmo